<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proyectotareasfx.controllerviews.AdminController">
   <children>
      <TabPane prefHeight="400.0" prefWidth="601.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="User">
            <content>
              <AnchorPane fx:id="tbluser" minHeight="0.0" minWidth="0.0" prefHeight="316.0" prefWidth="578.0">
                     <children>
                        <TableView fx:id="tblUser" layoutX="14.0" layoutY="14.0" prefHeight="331.0" prefWidth="227.0">
                          <columns>
                            <TableColumn fx:id="idColum" prefWidth="75.0" text="ID" />
                            <TableColumn fx:id="UserNameColum" prefWidth="75.0" text="UserName" />
                              <TableColumn fx:id="RolColum" prefWidth="75.0" text="Rol" />
                          </columns>
                        </TableView>
                        <TextField fx:id="txtUserName" layoutX="328.0" layoutY="64.0" promptText="UserName" />
                        <PasswordField fx:id="txtPassword" layoutX="328.0" layoutY="104.0" promptText="Password" />
                        <PasswordField fx:id="txtRepPassword" layoutX="328.0" layoutY="147.0" promptText="Repeat Password" />
                        <ComboBox fx:id="comboRol" layoutX="328.0" layoutY="192.0" prefWidth="150.0" promptText="Rol" />
                        <Button fx:id="btnAdd" layoutX="328.0" layoutY="228.0" mnemonicParsing="false" onAction="#btnAddUser" text="Add" />
                        <Label fx:id="lblMSG" layoutX="328.0" layoutY="288.0" />
                        <Button fx:id="btnUpdateUser" layoutX="328.0" layoutY="276.0" mnemonicParsing="false" onAction="#btnUpdateUser" text="Update" visible="false" />
                        <Button layoutX="425.0" layoutY="228.0" mnemonicParsing="false" onAction="#btnDelete" text="Delete" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Task View">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
